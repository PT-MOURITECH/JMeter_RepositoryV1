pipeline {
    agent any
    stages {
       
     stage('Run JMeter Test') {
            steps {
                script {
                    bat '"C:\\apache-jmeter-5.6.3\\bin\\jmeter" -n -t "C:\\apache-jmeter-5.6.3\\bin\\JPetStore.jmx" -l "result.jtl"'
                }
            }
        }
    }
    post {
        always {
            archiveArtifacts 'results.jtl'
        }
    }
}

